{% macro image(props) %}
    <picture>
        {% for source in props.sources|default([]) %}
            <source
                srcset="{{ source.srcset }}"
                media="{{ source.media }}"
                type="{{ source.type }}"
            >
        {% endfor %}

        <img
            src="{{ props.default.src }}"
            srcset="{{ props.default.srcset }}"
            width="{{ props.default.width }}"
            height="{{ props.default.height }}"
            alt="{{ props.default.alt }}"
            loading="lazy"
        >
    </picture>
    {# picture #}
{% endmacro %}
